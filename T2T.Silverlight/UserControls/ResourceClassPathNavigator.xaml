<UserControl x:Class="T2T.ResourceClassPathNavigator"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">
    
    <Grid >
        <StackPanel x:Name="spContent" Orientation="Horizontal" >
            <TextBlock x:Name="tbRoot" Text="All" MouseEnter="tbRoot_MouseEnter"
                       MouseLeave="tbRoot_MouseLeave"  
                       MouseLeftButtonDown="tbRoot_MouseLeftButtonDown"  Cursor="Hand" />
        </StackPanel>
    </Grid>
</UserControl>
